<h1>Update Owner</h1>

<form method="POST" action="/owners/<%=@owner.id%>">
  <label>Name:</label>
  
  <br></br>
  <input type="hidden" id="hidden" name="_method" value="patch">
   
  <input type="text" name="owner[name]" value="<%=@owner.name%>">

  <br></br>
  <%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>" <%="checked" if pet.owner == @owner %>><%=pet.name%></input>
<%end%>
    <br></br>
    <label>name:</label>
      <input type="text" name="pet[name]"></input>
      <br>
  
  <input type="submit" value="Update Owner">
</form>