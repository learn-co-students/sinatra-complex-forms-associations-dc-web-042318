<h1>Update Pet</h1>

<form method="POST" action="/pets/<%=@pet.id%>">
	<input type="hidden" id="hidden" name="_method" value="patch">
	<input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name"><br>
		<% @owners.each do |owner| %>
		<input type="radio" id="<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>"  <%='checked' if owner == @pet.owner%>><label for="<%=owner.id%>"><%=owner.name%></label>
		<% end %>
		<input type="radio" name="pet[owner_id]" value="" id="new"><label for="new">New Owner<input type="text" id="owner_name" name=owner[name] ></label>
	
		<input type="submit" value="Update Pet">
</form>



