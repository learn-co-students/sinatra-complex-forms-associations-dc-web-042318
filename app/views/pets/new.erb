<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
	<input type="text" name="pet[name]" id="pet_name"><br>
		<% @owners.each do |owner| %>
		<input type="radio" id="owner_<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>" ><label for="owner_<%=owner.id%>"><%=owner.name%></label>
		<% end %>
<input type="radio" name="pet[owner_id]" value="" id="new" checked><label for="new">New Owner<input type="text" id="owner_name" name="owner[name]" ></label>
		<input type="submit" value="Create Pet">
</form>

